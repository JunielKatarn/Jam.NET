<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jammit.Portable.Controls.Mixer">

  <StackLayout x:Name="ControlsLayout" BackgroundColor="Orange">
    <Label Text="{Binding Media.BackingTrack.Title}" />
    <Slider Minimum="0" Maximum="100" Value="50" BackgroundColor="DarkCyan" />

    <Label Text="{Binding Media.ClickTrack.Title}" />
    <Slider Minimum="0" Maximum="100" Value="50" BackgroundColor="LightCyan" />
  </StackLayout>

</ContentView>