<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Jammit.Mobile"
             xmlns:helpers="clr-namespace:Jammit.Helpers;assembly=Jam.NET.Mobile.Core"
             x:Class="Jammit.Mobile.SettingsPage">

  <ContentPage.Content>
    <StackLayout>
      <Label Text="PADDING" />
      <Grid>
        <Label Grid.Column="0" Text="Service URI" />
        <Entry
          Grid.Column="1"
          Placeholder="Enter service URI path."
          x:Name="ServiceUriEntry"
          Text="{Binding Mode=TwoWay, Source={x:Static helpers:Settings.ServiceUri}}" />
      </Grid>
            <Button x:Name="CloseButton" Text="Close" Clicked="CloseButton_Clicked" />
    </StackLayout>
  </ContentPage.Content>

</ContentPage>