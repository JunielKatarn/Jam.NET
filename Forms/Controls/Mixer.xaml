<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Jammit.Forms.Controls"
             x:Class="Jammit.Forms.Controls.Mixer">

  <StackLayout x:Name="ControlsLayout" BackgroundColor="Orange">
    <controls:TrackSlider Player="{Binding Player}" Track="{Binding Media.BackingTrack}" BackgroundColor="DarkOliveGreen" />
    <controls:TrackSlider Player="{Binding Player}" Track="{Binding Media.ClickTrack}" BackgroundColor="DarkOliveGreen" />
  </StackLayout>

</ContentView>